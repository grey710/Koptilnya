//***************************************************************************
#include <mega8535.h>
#include "lcd_lib.h"
#include "usart.h"

int main( void )
{
  unsigned char sym;
  
  USART_Init();
  LCD_Init();
  #asm("sei");
  LCD_SendStringFlash("uart:");
  
  while(1){
    sym = USART_GetChar(); //читаем буфер
    if (sym){             //если что-то приняли, то 
      LCD_Goto(6,0);
      LCD_WriteData(sym); //отображаем на lcd принятый символ
      USART_SendChar('O'); //отвечаем компу "Ok "
      USART_SendChar('k');  
      USART_SendChar(' ');  
    }
  }    
  return 0;
}
